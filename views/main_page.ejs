<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="../static/style/main_page.css" rel="stylesheet" type="text/css">
    <script src="https://kit.fontawesome.com/b1c674bb0b.js" crossorigin="anonymous"></script>
    <title>Home</title>
</head>
<body>
    <div id="content">
    <%- include('components/nav_bar') %>
    <div id="search">
        <input id="input">
        <i class="fas fa-search"></i>
    </div>
    <div id="list">
        <% for(item of items) { %>
        <div onclick="change_location('/item/<%= item._id %>')">
            <div id = 'item_box'>
                <img id = "item_image" src="/static/images/<%= item._id %><%= item.imgExt %> " alt="">
                <div id="item_data">
                <div id = "item_name"><%= item.name %> </div>
                <div id="item_desc"><%= item.description %> </div>
                <div id="item_price"><%= item.price %> PLN</div>
                <div id="item_quantity">Qty: <%= item.quantity %> </div>
            </div>
            </div>
        </div>
        <% } %>
    </div>
    </div>
    <%- include('components/footer') %>
</body>
</html>